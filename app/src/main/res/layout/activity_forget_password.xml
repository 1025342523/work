<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/content_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.yifarj.yifadinghuobao.view.TitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon_left="@drawable/ic_title_back"
        app:title_name="重置密码"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_100"
        android:layout_marginTop="@dimen/size_30"
        android:background="@color/white">

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_100"
            android:background="#33ffffff"
            android:hint="@string/user_name"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:maxLines="1"
            android:paddingLeft="@dimen/size_30"
            android:paddingStart="@dimen/size_30"
            android:textColor="@color/black"
            android:textColorHint="#868c94"
            android:textSize="@dimen/font_30"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_100"
        android:layout_marginTop="@dimen/size_10"
        android:background="@color/white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etPwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#33ffffff"
            android:hint="@string/password"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:maxLines="1"
            android:paddingLeft="@dimen/size_30"
            android:paddingStart="@dimen/size_30"
            android:textColor="@color/black"
            android:textColorHint="#868c94"
            android:textSize="@dimen/font_30"/>

        <TextView
            android:id="@+id/tvCode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/main_blue"
            android:gravity="center"
            android:padding="@dimen/size_20"
            android:text="发送验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/font_28"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_100"
        android:layout_marginTop="@dimen/size_10"
        android:background="@color/white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etNewPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="@string/user_password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="@dimen/size_30"
            android:paddingStart="@dimen/size_30"
            android:textColor="@color/black"
            android:textColorHint="#868c94"
            android:textSize="@dimen/font_30"/>

        <ImageView
            android:id="@+id/ivShowPwd"
            android:layout_width="@dimen/size_100"
            android:layout_height="@dimen/size_100"
            android:padding="@dimen/size_30"
            android:src="@drawable/ic_show_pwd"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnOk"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_90"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/size_30"
        android:layout_marginRight="@dimen/size_30"
        android:layout_marginTop="@dimen/size_50"
        android:background="@drawable/corner_btn_ok"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/font_30"/>
</LinearLayout>
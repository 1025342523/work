<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:stepper="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:clickable="true"
              android:foreground="?attr/selectableItemBackground"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_200"
        android:layout_marginEnd="@dimen/size_10"
        android:layout_marginStart="@dimen/size_10"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/size_200"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginStart="@dimen/size_10"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/size_4"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/item_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/default_image"/>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_20"
                android:maxLines="2"
                android:textColor="#333333"
                android:textSize="@dimen/font_30"/>

            <TextView
                android:id="@+id/tv_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_20"
                android:layout_marginStart="@dimen/size_20"
                android:layout_marginTop="@dimen/size_8"
                android:gravity="center_vertical"
                android:textColor="@color/text_desc"
                android:textSize="@dimen/font_24"
                android:textStyle="bold"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size_20"
                    android:layout_marginStart="@dimen/size_20"
                    android:text="2999.00"
                    android:textColor="@color/main_red"
                    android:textSize="@dimen/font_30"/>


            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/ll_flowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_40"
        android:padding="20dp"
        app:max_select="1">
    </com.zhy.view.flowlayout.TagFlowLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_40"
            android:layout_marginStart="@dimen/size_40"
            android:src="@drawable/ic_delete"/>

        <com.bigkoo.snappingstepper.SnappingStepper
            android:id="@+id/stepperCustom"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            stepper:max="200"
            stepper:min="50"
            stepper:step="5"
            stepper:stepper_background="@null"
            stepper:stepper_contentBackground="@color/light_blue"
            stepper:stepper_contentTextColor="#0099ff"
            stepper:stepper_contentTextSize="18"
            />

    </RelativeLayout>

</LinearLayout>

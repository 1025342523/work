<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/fl_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        >

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/default_image"
            android:layout_margin="5dp"
            android:visibility="gone"
            />
    </FrameLayout>
    <TextView
        android:id="@+id/tv_productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/fl_icon"
        android:layout_alignTop="@+id/fl_icon"
        android:text="爱好521C圆珠笔"
        android:maxLines="1"
        android:maxLength="15"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:textColor="@color/main_text2"
        />

    <TextView
        android:id="@+id/tv_supplier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_productName"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textSize="12sp"
        android:text="得利文具"
        android:textColor="@color/main_text2"
        />

    <TextView
        android:id="@+id/tv_unitname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_productName"
        android:layout_toRightOf="@id/fl_icon"
        android:text="基本单位: 支"
        android:layout_marginTop="3dp"
        android:textSize="12sp"
        android:textColor="@color/main_text2"
        />

    <TextView
        android:id="@+id/tv_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/fl_icon"
        android:layout_below="@id/tv_unitname"
        android:layout_marginTop="3dp"
        android:text="数量: 20"
        android:textSize="12sp"
        android:textColor="@color/main_text2"
        />

    <TextView
        android:id="@+id/tv_totalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="金额: 15.5元"
        android:textSize="12sp"
        android:textColor="@color/main_red"
        android:layout_alignBottom="@+id/tv_unitname"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/tv_quantity"
        android:text="XSCK20170430-014"
        android:layout_marginRight="10dp"
        android:textSize="12sp"
        android:textColor="@color/main_text2"
        />
</RelativeLayout>
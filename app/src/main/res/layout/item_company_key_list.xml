<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_popup_bg"
                android:foreground="?attr/selectableItemBackground">


    <FrameLayout
        android:id="@+id/viewFrame"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/main_red"/>

    <TextView
        android:id="@+id/companyKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/viewFrame"
        android:layout_toStartOf="@id/viewFrame"
        android:gravity="end"
        android:maxLines="1"
        android:padding="@dimen/size_16"
        android:textColor="#c1dbf6"
        android:textSize="@dimen/font_26"/>

    <TextView
        android:id="@+id/company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/viewFrame"
        android:layout_toRightOf="@id/viewFrame"
        android:gravity="start"
        android:maxLines="1"
        android:padding="@dimen/size_16"
        android:textColor="#c1dbf6"
        android:textSize="@dimen/font_26"/>
</RelativeLayout>

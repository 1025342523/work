<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical"
    android:visibility="invisible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_110">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/size_28"
            android:text="@string/cancel"
            android:textColor="@color/light_blue"
            android:textSize="@dimen/font_30"/>

        <RelativeLayout
            android:id="@+id/search_view_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_80"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/size_16"
            android:layout_toLeftOf="@id/tvCancel"
            android:background="@drawable/shape_search_bg"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginStart="@dimen/size_16"
                android:src="@drawable/ic_search_view"/>

            <ImageView
                android:id="@+id/search_text_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/size_16"
                android:layout_marginRight="@dimen/size_16"
                android:src="@drawable/ic_search_clear"
                android:visibility="invisible"/>

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/search_text_clear"
                android:layout_toRightOf="@id/ivSearch"
                android:background="@null"
                android:gravity="center"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/main_text2"
                android:textColorHint="@color/main_desc"
                android:textSize="@dimen/font_26"/>


        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/size_10"
        android:background="@color/line_color"/>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/searchContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none"/>
</LinearLayout>
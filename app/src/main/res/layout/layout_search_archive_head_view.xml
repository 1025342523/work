<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_layout_default_height"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/search_all_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/search_all_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_all"
                android:textColor="@drawable/selector_color_tabs"
                android:textSize="@dimen/font_28"/>

            <ImageView
                android:id="@+id/search_all_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_6"
                android:layout_marginStart="@dimen/size_6"
                android:src="@drawable/ic_bangumi_index_close"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/search_name_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/search_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_name"
                android:textColor="@drawable/selector_color_tabs"
                android:textSize="@dimen/font_28"/>

            <ImageView
                android:id="@+id/search_name_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_6"
                android:layout_marginStart="@dimen/size_6"
                android:src="@drawable/ic_bangumi_index_close"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/search_code_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/search_code_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_num"
                android:textColor="@drawable/selector_color_tabs"
                android:textSize="@dimen/font_28"/>

            <ImageView
                android:id="@+id/search_code_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_6"
                android:layout_marginStart="@dimen/size_6"
                android:src="@drawable/ic_bangumi_index_close"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_price_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/search_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_price"
                android:textColor="@drawable/selector_color_tabs"
                android:textSize="@dimen/font_28"/>

            <ImageView
                android:id="@+id/search_price_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_6"
                android:layout_marginStart="@dimen/size_6"
                android:src="@drawable/ic_bangumi_index_close"/>

        </LinearLayout>

    </LinearLayout>


    <!--<android.support.v7.widget.RecyclerView-->

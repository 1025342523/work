<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.yifarj.yifadinghuobao.view.TitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon_left="@drawable/ic_title_back"
        app:title_name="密码设置"/>

    <RelativeLayout
        android:id="@+id/rl_setPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_110"
        android:layout_marginTop="@dimen/size_16"
        android:background="@drawable/selector_list_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_28"
            android:layout_marginStart="@dimen/size_20"
            android:text="@string/set_password"
            android:textColor="@color/black"
            android:textSize="@dimen/font_30"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/size_20"
            android:layout_marginRight="@dimen/size_20"
            android:src="@drawable/ic_list_more"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_modifyPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_110"
        android:layout_marginTop="@dimen/size_16"
        android:background="@drawable/selector_list_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_28"
            android:layout_marginStart="@dimen/size_20"
            android:text="@string/modify_password"
            android:textColor="@color/black"
            android:textSize="@dimen/font_30"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/size_20"
            android:layout_marginRight="@dimen/size_20"
            android:src="@drawable/ic_list_more"/>
    </RelativeLayout>
</LinearLayout>
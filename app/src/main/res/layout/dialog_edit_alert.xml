<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <View
        android:id="@+id/viewBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8c000000"/>

    <LinearLayout
        android:id="@+id/llDialogBg"
        android:layout_width="@dimen/size_500"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:padding="@dimen/size_20"
            android:text="@string/delete_dialog_title"
            android:textColor="@color/main_text"
            android:textSize="@dimen/font_30"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:padding="@dimen/size_16"
            android:textColor="@color/main_text"
            android:textSize="@dimen/font_24"/>

        <EditText
            android:id="@+id/etContent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_80"
            android:paddingLeft="@dimen/size_30"
            android:paddingRight="@dimen/size_30"
            android:textColor="@color/main_text"
            android:textSize="@dimen/font_30"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/size_20"
            android:background="@color/line_color"/>

        <LinearLayout
            android:id="@+id/rlBottomView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_100"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_list_bg"
                android:gravity="center"
                android:padding="@dimen/size_20"
                android:text="@string/cancel"
                android:textColor="@color/main_text"
                android:textSize="@dimen/font_28"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/line_color"/>

            <TextView
                android:id="@+id/tvDone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/main_blue"
                android:gravity="center"
                android:padding="@dimen/size_20"
                android:text="@string/ok"
                android:textColor="@color/white"
                android:textSize="@dimen/font_28"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>